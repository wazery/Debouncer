<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title><%= @title || "Debouncer" %></title>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>

  <!-- text fonts -->
  <link rel="stylesheet" href="assets/ace-fonts.css" />

  <!-- ace styles -->
  <link rel="stylesheet" href="assets/ace.css" id="main-ace-style" />

  <!--[if lte IE 9]>
    <link rel="stylesheet" href="assets/css/ace-part2.min.css" />
  <![endif]-->
  <link rel="stylesheet" href="assets/ace-skins.css" />
  <link rel="stylesheet" href="assets/ace-rtl.css" />

  <!--[if lte IE 9]>
    <link rel="stylesheet" href="assets/css/ace-ie.min.css" />
  <![endif]-->

  <!-- inline styles related to this page -->

  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <!-- ace settings handler -->
  <script src="assets/ace-extra.min.js"></script>
  <script src="assets/ace-elements.min.js"></script>
  <script src="assets/ace.min.js"></script>

  <%= csrf_meta_tags %>
</head>
<body>
  <div id="wrap">
    <header>
      <%= render 'layouts/navigation' %>
    </header>

    <!-- /section:basics/navbar.layout -->
    <div class="main-container" id="main-container">
      <script type="text/javascript">
        try{ace.settings.check('main-container' , 'fixed')}catch(e){}
      </script>

      <%= render 'layouts/sidebar' %>

      <!-- /section:basics/sidebar -->
      <div class="main-content">

        <%= render 'layouts/breadcrumbs' %>

        <!-- /section:basics/content.breadcrumbs -->
        <div class="page-content">
          <%= render 'layouts/ace_settings' %>

          <!-- /section:settings.box -->
          <div class="page-content-area">
            <div class="page-header">
              <h1>
                Dashboard
                <small>
                  <i class="ace-icon fa fa-angle-double-right"></i>
                  overview &amp; stats
                </small>
              </h1>
            </div><!-- /.page-header -->

            <div class="row">
              <div class="col-xs-12">
                <!-- PAGE CONTENT BEGINS -->
                <div class="row">
                  <div class="col-sm-6 col-sm-offset-3 text-center">
                    <%= render 'layouts/messages' %>
                  </div>
                </div>
                <%= yield %>
              </div><!-- /.col -->
            </div><!-- /.row -->
          </div><!-- /.page-content-area -->
        </div><!-- /.page-content -->
      </div><!-- /.main-content -->
     <%= render 'layouts/footer' %>
    </div>
  </div>

</body>
</html>
